load("//components/shared/code/defs.bzl", "remap_headers")
load("//components/vc/shared:defs.bzl", "shared_shockpot_library")

srcs = glob(["**/*.c"])
[
    export_file(
        name = file,
        src = file,
        visibility = ["//components/..."],
    )
    for file in srcs
]

folders = [
    "HW/",
    "app/",
]
exported_headers = remap_headers(folders)

prebuilt_cxx_library(
    name = "headers",
    header_only = True,
    header_namespace = "",
    exported_headers = exported_headers,
    visibility = ["PUBLIC"],
)
